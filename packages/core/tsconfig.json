{
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "~",
    "types": ["node"],
    "paths": {
      "~/*": ["src/*"]
    },
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "dist", "node_modules"]
}
